@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>DriveRent Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: emoji;
            background: linear-gradient(135deg, #020b2b, #173c9e);
        }

        .container-wrapper {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .login-container {
            background-color: white;
            border-radius: 15px;
            padding: 20px;
            width: 100%;
            max-width: 450px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .login-container .logo {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 30px;
        }

        .login-container .logo i {
            font-size: 50px;
            color: #2563eb;
        }

        .login-container .logo h2 {
            font-weight: bold;
            /*margin-top: 10px;*/
            margin-bottom: 0;
        }

        .login-container .logo span {
            font-size: 14px;
            color: #6b7280;
        }

        .form-control {
            height: 50px;
            font-size: 16px;
        }

        .form-check-label {
            font-size: 14px;
        }

        .btn-primary {
            background-color: #2563eb;
            border: none;
        }

        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 20px 0;
        }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #ccc;
        }

        .divider:not(:empty)::before {
            margin-right: .75em;
        }

        .divider:not(:empty)::after {
            margin-left: .75em;
        }

        .btn-outline-secondary {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            height: 50px;
            font-size: 16px;
        }

        .footer-text {
            font-size: 14px;
            text-align: center;
            margin-top: 20px;
        }

        .footer-text a {
            color: #2563eb;
            text-decoration: none;
        }

        .footer-text a:hover {
            text-decoration: underline;
        }

        .copyright {
            text-align: center;
            color: #e5e7eb;
            font-size: 13px;
            margin-top: 40px;
        }

        @@media (max-width: 576px) {
            .login-container {
                padding: 20px;
            }

            .form-control {
                height: 45px;
                font-size: 15px;
            }
        }
    </style>
</head>
<body>
    <div class="container-wrapper">
        <div class="login-container">
            <div class="logo">
                <i class="bi bi-car-front-fill"></i>
                <h2>Wheels On Go</h2>
                <span>Premium Car Rental Service</span>
            </div>

            <h5 class="text-center mb-3 fw-semibold">Welcome Back !</h5>

            <form id="loginForm">
                <!-- Default Login Section -->
                <div id="defaultLogin">
                    <div class="mb-3">
                        <label class="form-label">Email Address <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="email" class="form-control" placeholder="Enter your email">
                        </div>
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Password <span class="text-danger">*</span></label>
                        <input type="password" class="form-control" placeholder="Enter your password">
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="remember">
                            <label class="form-check-label" for="remember">Remember me</label>
                        </div>
                        <a href="#" class="text-primary" style="font-size: 14px;">Forgot Password?</a>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Sign In</button>
                    </div>

                    <div class="divider">Or continue with</div>

                    <div class="d-grid mb-3">
                        <button type="button" class="btn btn-outline-secondary" id="showOtpLogin">
                            <i class="bi bi-telephone"></i> Login with OTP
                        </button>
                    </div>
                </div>

                <!-- OTP Login Section (Initially Hidden) -->
                <div id="otpLogin" style="display: none;">
                    <div class="mb-3">
                        <label class="form-label">Mobile Number <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                            <input type="tel" class="form-control" placeholder="Enter mobile number" maxlength="12">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Enter OTP <span class="text-danger">*</span></label>
                        <div class="d-flex gap-2">
                            <input type="text" class="form-control text-center" maxlength="1" style="width: 50px;">
                            <input type="text" class="form-control text-center" maxlength="1" style="width: 50px;">
                            <input type="text" class="form-control text-center" maxlength="1" style="width: 50px;">
                            <input type="text" class="form-control text-center" maxlength="1" style="width: 50px;">
                        </div>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="button" class="btn btn-primary">Submit OTP</button>
                    </div>

                    <div class="footer-text">
                        Want to login with password? <a href="#" id="backToLogin">Back to Login</a>
                    </div>
                </div>

                <div class="footer-text" id="signupFooter">
                    Don’t have an account? <a href="@Url.Action("Registration", "Login")">Sign up</a>
                </div>
            </form>

        </div>

        <div class="copyright">
            © 2024 <span class="text-primary">DriveRent</span>. All rights reserved.
        </div>
    </div>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.getElementById("showOtpLogin").addEventListener("click", function () {
            document.getElementById("defaultLogin").style.display = "none";
            document.getElementById("otpLogin").style.display = "block";
            document.getElementById("signupFooter").style.display = "none";
        });

        document.getElementById("backToLogin").addEventListener("click", function (e) {
            e.preventDefault();
            document.getElementById("defaultLogin").style.display = "block";
            document.getElementById("otpLogin").style.display = "none";
            document.getElementById("signupFooter").style.display = "block";
        });
    </script>

</body>
</html>
