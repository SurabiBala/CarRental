@{
    ViewBag.Title = "Invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<!-- DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

<style>
    .status-badge {
        border-radius: 20px;
        padding: 5px 12px;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .status-paid {
        background-color: #d1f7d6;
        color: #28a745;
    }

    .status-pending {
        background-color: #fff3cd;
        color: #856404;
    }

    .status-overdue {
        background-color: #f8d7da;
        color: #721c24;
    }

    .summary-card {
        padding: 15px 20px;
        border-radius: 10px;
        background: #f9f9f9;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        min-height: 80px;
    }

    .icon-box {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 22px;
        border-radius: 8px;
    }

</style>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="summary-card d-flex align-items-center">
                <div class="icon-box bg-primary text-white me-3">
                    <i class="bi bi-currency-dollar"></i>
                </div>
                <div>
                    <div class="fw-bold fs-5" id="totalRevenue">₹0</div>
                    <div>Total Revenue</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="summary-card d-flex align-items-center">
                <div class="icon-box bg-success text-white me-3">
                    <i class="bi bi-check-circle"></i>
                </div>
                <div>
                    <div class="fw-bold fs-5" id="paidAmount">₹0</div>
                    <div>Paid</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="summary-card d-flex align-items-center">
                <div class="icon-box bg-warning text-white me-3">
                    <i class="bi bi-clock-history"></i>
                </div>
                <div>
                    <div class="fw-bold fs-5" id="pendingAmount">₹0</div>
                    <div>Pending</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="summary-card d-flex align-items-center">
                <div class="icon-box bg-danger text-white me-3">
                    <i class="bi bi-exclamation-circle"></i>
                </div>
                <div>
                    <div class="fw-bold fs-5" id="overdueAmount">₹0</div>
                    <div>Overdue</div>
                </div>
            </div>
        </div>
    </div>


    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Invoice Details</h6>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Invoice</th>
                        <th>Customer</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Due Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="invoiceTableBody">
                </tbody>
            </table>
        </div>
    </div>
</div>
        <!-- PDF Modal -->
        <div class="modal fade" id="pdfModal" tabindex="-1" aria-labelledby="pdfModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Invoice Preview</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <iframe id="pdfFrame" src="" width="100%" height="600px" frameborder="0"></iframe>
                    </div>
                </div>
            </div>
        </div>

        @section scripts {
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <!-- DataTables JS -->
            <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>


            <script>
                $(document).ready(function () {
                    $.ajax({
                        url: '/Invoice/GetInvoiceDetails',
                        method: 'GET',
                        success: function (data) {
                            var invoices = JSON.parse(data);
                            var table = $('#invoiceTableBody');

                            let total = 0, paid = 0, pending = 0, overdue = 0;

                            $.each(invoices, function (i, item) {
                                const status = item.c_status.toLowerCase();
                                const statusClass = status === 'paid' ? 'status-paid'
                                    : status === 'pending' ? 'status-pending'
                                        : 'status-overdue';

                                const badge = `<span class="status-badge ${statusClass}">${item.c_status}</span>`;

                                let amount = parseFloat(item.n_net_amount);
                                total += amount;
                                if (status === 'paid') paid += amount;
                                else if (status === 'pending') pending += amount;
                                else overdue += amount;

                                const row = `
                        <tr>
                            <td>
                                <div>${item.c_invoice_id}</div>
                                <small>${item.d_invoice_date}</small>
                            </td>
                            <td>
                                <div class="fw-bold">${item.c_customer_name}</div>
                                <div><small>${item.c_email_id}</small></div>
                                <div><small>${item.c_billing_address}</small></div>
                            </td>
                            <td>₹${amount.toLocaleString()}</td>
                            <td>${badge}</td>
                            <td>${item.d_payment_due_date}</td>
                            <td>
                                <i class="bi bi-eye text-primary me-2" style="cursor:pointer" title="View" onclick="viewInvoice('${item.c_invoice_id}')"></i>
                                <i class="bi bi-download text-success" style="cursor:pointer" title="Download" onclick="downloadInvoice('${item.c_invoice_id}')"></i>
                            </td>
                        </tr>`;
                                table.append(row);
                            });

                            $('#totalRevenue').text('₹' + total.toLocaleString());
                            $('#paidAmount').text('₹' + paid.toLocaleString());
                            $('#pendingAmount').text('₹' + pending.toLocaleString());
                            $('#overdueAmount').text('₹' + overdue.toLocaleString());

                            // Initialize DataTable
                            $('table').DataTable({
                                pageLength: 5,  // Optional: Show 5 rows per page
                                lengthChange: true, // Optional: hide "Show X entries"
                                order: [], // Optional: disable default sorting
                            });
                        }

                    });
                });
                function viewInvoice(invoiceId) {
                    $('#pdfFrame').attr('src', `/Invoice/ViewInvoice?invoiceId=${invoiceId}`);
                    $('#pdfModal').modal('show');
                }

                function downloadInvoice(invoiceId) {
                    window.open(`/Invoice/DownloadInvoice?invoiceId=${invoiceId}`, '_blank');
                }

            </script>
        }
